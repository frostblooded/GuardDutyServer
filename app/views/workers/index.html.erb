<% provide(:title, 'Workers') %>

<h2 class="page-header">Workers activity</h2>



<div class="col-md-offset-3 col-md-6">
  <%= link_to 'Create worker', new_worker_path, class:'btn btn-primary col-md-offset-4 col-md-4
                                                                      col-xs-offset-4 col-xs-4' %>
  <table class="table table-hover">
    <thead>
      <tr>  
        <th>Worker</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @workers.each do |worker| %>
        <tr>
          <td>
            <%=link_to worker.name, worker, class:"btn btn-default" %>
          </td>
          
          <td>
            <%= button_to edit_worker_path(worker), method: :get, class: 'worker-edit btn btn-default' do %>
              <span class="glyphicon glyphicon-pencil"></span>
            <% end %>
          </td>
          <td>
            <%= button_to worker, method: :delete, data: { confirm: "You sure?" }, class: 'worker-delete btn btn-danger' do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>