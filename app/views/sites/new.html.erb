<% provide(:title, 'Create site') %>

<h2>Create site</h2>

<div class="col-md-6">
  <%= form_for(@site) do |f| %>
    <%= render 'shared/errors', errors: @site.errors %>

    <div class="form-group row">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  
    <%= f.submit "Create new site", class: "btn btn-primary
                                            col-md-4 col-md-offset-4 
                                            col-xs-4 col-xs-offset-4 row" %>
  <% end %>
</div>
