<% provide(:title, t('.title')) %>

<h2 class="page-header"><%= t '.header' %></h2>

<div class="col-md-offset-2 col-md-8">
  <%= link_to t('.create_site'), new_site_path, class:'btn btn-primary col-md-offset-4 col-md-4
                                                       col-xs-offset-4 col-xs-4' %>

  <%= will_paginate @sites %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t 'activerecord.models.site' %></th>
        <th><%= t 'delete' %></th>
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td>
            <%= link_to site.name, site, class:"btn btn-default" %>
          </td>

          <td>
            <%= button_to site, method: :delete, data: { confirm: t('confirmation') }, class: 'site-delete btn btn-danger' do %>
              <span class="glyphicon glyphicon-trash"></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @sites %>
</div>
