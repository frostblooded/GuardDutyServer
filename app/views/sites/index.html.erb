<% provide(:title, 'Sites') %>


<h2 class="page-header">Manage your sites</h2>

<div class="col-md-offset-3 col-md-6">
  <%= link_to 'Create site', new_site_path, class:'btn btn-primary col-md-offset-4 col-md-4
                                                                   col-xs-offset-4 col-xs-4' %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Site</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td>
            <%=link_to site.name, site, class:"btn btn-default" %>
          </td>

          <td>
            <%= link_to site, method: :delete, data: { confirm: "You sure?" } do %>
              <button class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>
              </button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
