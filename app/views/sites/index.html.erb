<% provide(:title, 'Sites') %>

<h2>Your sites</h2>

<br />

<%= link_to 'Create site', new_site_path, class:'btn btn-primary pull-left' %>

<div class="clearfix"></div>

<br />

<h3>Manage your sites</h3>

<div class="col-md-6">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Site</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td>
            <%=link_to site.name, site, class:"btn btn-default" %>
          </td>

          <td>
            <%= link_to site, method: :delete, data: { confirm: "You sure?" } do %>
              <button class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>
              </button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
