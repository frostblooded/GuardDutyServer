<% provide(:title, 'Workers') %>

<h1>Your workers</h1>
<ul class="workers">
  <% @worker.each do |worker| %>
    <li>
      <div class="workersInfo">
      	<%=link_to worker_path(worker) do %>
          <%= worker.name %>
        <% end %>
        <span>|</span> <%= link_to "edit", edit_worker_path(worker)%>
        <span>|</span> <%= link_to "delete", worker, method: :delete,
                                      data: { confirm: "You sure?" } %>
      </div>
    </li>
  <% end %>
</ul>

<div class = "button">
  <%= button_tag type: :button do %>
    <%= link_to 'Add worker', workers_new_path %>
  <% end %>
</div>

