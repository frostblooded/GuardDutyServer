<div class="worker">
	<p><%= @worker.first_name %> <%= @worker.last_name %></p>
		<p><%= @company.company_name %> </p>
</div>

<div class="wtable">
	<table>
		<tr>
  			<th>Start of the shift </th>
  			<th>End of the shift </th>
  			<th>Calls </th>
        <th>Answered calls </th>
  		</tr>
  		<tr>
  			<td> Something </td>
  			<td> Something v2 </td>
  			<td>   
  				<% @calls.each do |call| %>
					<%= call %>
    			<% end %>
    	 	</td>
        <td>   
          <% @calls.each do |call| %>
            <% if call.answered? %>
              <%= call %>
            <% end %>
          <% end %>
        </td>
      </tr>
	</table>
</div>