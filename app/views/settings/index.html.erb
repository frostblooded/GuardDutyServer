<% provide(:title, 'Settings') %>

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Settings</title>
    </head>
	<body>
		<%= form_tag do %>
			<div class="settings">
				<div class="email_wanted">
					<span> Do you want daily report sent to your email? </span>
					<div class="checkboxes">
						<div class="first_radio">
							<input id="email_wanted" type="radio" name="email_wanted" value="true" class="radio1"/>
							<label for="email_wanted"> Yes, I would like to get daily report for my workers </label>
						</div>
						<div class="second_radio">
							<input id="email_wanted" type="radio" name="email_wanted" value="false" class="radio2"/>
							<label for="email_wanted"> No, I dont want it </label>
						</div>
					</div>
				</div>

				<div class="email_time">
					When do you want to receive the mail?
					<input type="text" name="email_time" id="email_time" value="<%= @company.settings(:email).time %>"/>
				</div>

				<button type="Submit" value="update" class="submit_button"> Save changes </button>
			</div>
		<% end %>

		<div class ="change_password">
			<%= link_to "Want to edit your email or credentials?", edit_company_registration_path %>
		</div>
  	</body>
</html>