<h2 class="page-header"><%= t('.forgot_your_password') %></h2>

<%= form_for(resource, as: resource_name,
                       url: password_path(resource_name),
                       html: { method: :post, class:"col-md-offset-4 col-md-4" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary center-block row' %>
  </div>
<% end %>
